<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardMaxElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="16dp"
    android:backgroundTint="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_pdf"
            android:paddingHorizontal="18dp"

            />


        <LinearLayout
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="vertical"

            android:layout_gravity="center"
            >

            <TextView
                android:id="@+id/pdf_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PDFName"
                android:textColor="@color/blue_ligth"
                android:textSize="20sp"
                android:textStyle="bold"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="Added by :"
                android:textColor="@color/blue_ligth"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/user_uploaded_pdf_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="user"
                android:textColor="#828383"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="0dp">
                <TextView
                    android:id="@+id/date_pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="jj-mm-yyyy"
                    android:textColor="@color/blue_ligth"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/time_pdf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:text="12:12"
                    android:textColor="@color/blue_ligth"
                    android:textSize="15sp" />


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/document_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="26dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_more_class"

                />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>